<idea-plugin>
    <id>com.sunnywalden.chatgptplugin</id>
    <name>ChatGPT Plugin</name>
    <version>1.0</version>
    <vendor email="sunnywalden@gmail.com" url="https://www.github.com/sunnywalden">SunnyWalden</vendor>

    <description>
        A simple plugin to interact with ChatGPT.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.go</depends>
    <depends>com.intellij.modules.goland</depends>
    <depends>com.intellij.openapi</depends>

    <actions>
        <action id="com.sunnywalden.ChatGPTPlugin" class="com.sunnywalden.ChatGPTPlugin" text="ChatGPT">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>